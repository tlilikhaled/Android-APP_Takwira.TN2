<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgetpassword_background_img"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Nom du stade:"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nom_stade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Addresse :"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/address_stade"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Ville :"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"


            />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/address"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Type :"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-9dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/id_grpradio3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/type1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorwhite"
                    android:text="Gazon"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/type2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:buttonTint="@color/colorwhite"
                    android:text="Tapis"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />
            </RadioGroup>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Vestiaire :"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/id_grpradio2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/vestoui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorwhite"
                    android:text="Oui"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/vestnon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorwhite"
                    android:text="Non"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Eclairage :"
            android:textColor="@color/colorwhite"
            android:textSize="18dp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/id_grpradio1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ecl_oui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorwhite"
                    android:text="Oui"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/ecl_non"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorwhite"
                    android:checked="false"
                    android:text="Non"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Heure d'ouverture :"
            android:textColor="@color/colorwhite"

            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/h_open"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Heure de fermeture :"
            android:textColor="@color/colorwhite"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/h_close"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idprix"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Prix :"
            android:textColor="@color/colorwhite"
            android:textSize="18dp"


            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-9dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/upload_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/purple_200"
            android:text="@string/ins_rer_image"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgstadeinsert"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_insert_img" />

    </LinearLayout>

    <Button
        android:id="@+id/Btnadd"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_inscri"
        android:onClick="BtnaddStdium"
        android:text="@string/txt_btn_add_stade"
        android:textColor="@color/colorwhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/txt_loginreturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_grpradio" />


</LinearLayout>